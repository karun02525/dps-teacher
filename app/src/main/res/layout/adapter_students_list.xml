<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tvStudentPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_pic"
        app:civ_border_color="#03A9F4"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:padding="1dp"
        android:layout_marginEnd="5dp"
        android:singleLine="true"
        tools:text="Karun Kumar"
        android:textColor="#676767"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvStudentPic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:letterSpacing="0.09"
        android:padding="2dp"
        android:text="8920828585"
        android:textColor="#121212"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tvStudentPic"
        app:layout_constraintTop_toBottomOf="@+id/tv_stu_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/ic_drop_down"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>